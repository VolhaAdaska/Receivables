@model Receivables.Models.StoreTypeViewModel

@{
    ViewBag.Title = "Update store type";
}

@using (Html.BeginForm())
{
 
    <div class="container-fluid equal-cols-container text-white">
        <div class="row equal-row">
            <div class="col-md-3 equal-col fullscreen-element animated" data-animation="fadeInLeftBig">
            </div>
            <div class="col-md-6 equal-col animated" data-animation="fadeInRightBig">
                <div class="equal-col-wrapper">
                    <div class="equal-col-container">
                        <div class="equal-col-content">
                            <div class="row">
                                <div class="col-md-10 col-md-offset-1">
                                    <h3 class="section-title text-center nomargin text-white">UPDATE STORE TYPE</h3>
                                    <div class="divider divider-center text-white"><span></span></div>
                                    <div class="contact-form">
                                        <div class="col-md-12 col-sm-12">
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group">
                                                @Html.ValidationSummary()
                                                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control nobottommargin input-border-bottom", @placeholder = @Model.Name, @required = "required" } })
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-4 text-center">
                                                <button class=" btn btn-block btn-default button button-modern nomargin " type="submit">Update</button>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 equal-col fullscreen-element animated" data-animation="fadeInLeftBig">
            </div>
        </div>
    </div>
}




