
@model IEnumerable<Receivables.Models.StoreTypeViewModel>
  
@{
    ViewBag.Title = "Store type";
}

<div class="container-fluid equal-cols-container text-white">
    <div class="row equal-row">
        <div class="col-md-4 equal-col fullscreen-element animated" data-animation="fadeInLeftBig">
        </div>
        <div class="col-md-4 equal-col animated" data-animation="fadeInRightBig">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th class="text-center" scope="colgroup">Name</th>
                    <th class="text-center" scope="colgroup"> </th>
                </tr>
                </thead>
                <colgroup>
                    <col class="col-md-1">
                    <col class="col-md-2">
                </colgroup>
                <tbody>
                @foreach (var p in @Model)
                {
                    <tr>
                        <td class="text-center">    
                            @Html.ActionLink(@p.Name, "StoreList", "StoreAdmin", new { id = p.Id }, new {@class = "nav-link text-white" })                         
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "UpdateStoreType", "StoreTypeAdmin", new { id = p.Id, name = p.Name }, new { @class = "btn btn-light active text-white" })
                            @Html.ActionLink("Delete", "DeleteStoreType", "StoreTypeAdmin", new { id = p.Id }, new { @class = "btn btn-light active text-white" }) 
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="col-md-4 equal-col fullscreen-element animated" data-animation="fadeInLeftBig">
        </div>
    </div>
</div>
