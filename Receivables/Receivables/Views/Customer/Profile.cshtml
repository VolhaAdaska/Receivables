                                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4" />
                    <h6 class="heading-small text-muted mb-4">Статус контрагента</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "custom-control-input" })
                                    @Html.LabelFor(m => m.IsActive, new { @class = "custom-control-label" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.CheckBoxFor(m => m.IsBlocked, new { @class = "custom-control-input" })
                                    @Html.LabelFor(m => m.IsBlocked, new { @class = "custom-control-label" })
                                </div>
                            </div>
                        </div>
                    </div>

