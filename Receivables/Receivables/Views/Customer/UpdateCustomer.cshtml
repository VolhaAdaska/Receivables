@model Receivables.Models.CustomerModel

@{
    ViewBag.Title = "Update";
}

@section Header{
    <div class="col-xl-12 order-xl-1">
        <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Изменение контрагента</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.UserId)
                    <h6 class="heading-small text-muted mb-4">Профиль контрагента</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FullName, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.INN, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.INN, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.INN, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4" />
                    <!-- Address -->
                    <h6 class="heading-small text-muted mb-4">Контактная информация</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Address, new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4" />
                    <h6 class="heading-small text-muted mb-4">Статус контрагента</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "custom-control-input" })
                                    @Html.LabelFor(m => m.IsActive, new { @class = "custom-control-label" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.CheckBoxFor(m => m.IsBlocked, new { @class = "custom-control-input" })
                                    @Html.LabelFor(m => m.IsBlocked, new { @class = "custom-control-label" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-outline-info" type="submit">Update</button>
                }
            </div>
        </div>
    </div>
}

