@model IEnumerable<Receivables.Models.DebtModel>
@{
    ViewBag.Title = "ДЗ";
}

@section Header{
    <div class="col-xl-12 order-xl-1">
        <!-- Table -->
        <div class="row">

            <div class="col">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <h3 class="mb-0">Дебиторская задолженность</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Контрагент</th>
                                    <th scope="col">ИНН</th>
                                    <th scope="col">Статус</th>
                                    <th scope="col">Сумма</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doc in @Model)
                                {
                                    <tr>
                                        <th scope="row">
                                            <div class="media align-items-center">
                                                <div class="media-body">
                                                    @Html.ActionLink(doc.CustomerName, "Profile", "Customer", new { id = doc.Id }, new { @class = "mb-0 text-sm" })
                                                </div>
                                            </div>
                                        </th>
                                        <td>
                                            @doc.CustomerINN
                                        </td>
                                        <td>
                                            @doc.Status
                                        </td>
                                        <td>
                                            @doc.SumDebt
                                        </td>
                                        <td class="text-right">
                                            <div class="dropdown">
                                                <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                    @Html.ActionLink("Удалить", "DeleteCustomer", "Customer", new { id = doc.Id }, new { @class = "dropdown-item" })
                                                    @Html.ActionLink("Закрыть", "Index", "Customer", new { id = doc.Id }, new { @class = "dropdown-item" })
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer py-4">
                        @* <nav aria-label="...">
                                <ul class="pagination justify-content-end mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">
                                            <i class="fas fa-angle-left"></i>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">
                                            <i class="fas fa-angle-right"></i>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
}

