@model IEnumerable<Receivables.Models.DebtModel>
@{
    ViewBag.Title = "ДЗ";
}

@section Header{
    <div class="col-xl-12 order-xl-1">
        <!-- Table -->
        <div class="row">

            <div class="col">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <h3 class="mb-0">Дебиторская задолженность</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Контрагент</th>
                                    <th scope="col">ИНН</th>
                                    <th scope="col">Статус</th>
                                    <th scope="col">Сумма</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doc in @Model)
                                {
                                    <tr>
                                        <th scope="row">
                                            <div class="media align-items-center">
                                                <div class="media-body">
                                                    @Html.ActionLink(doc.CustomerName, "ProfileDebt", "Debt", new { id = doc.Id }, new { @class = "mb-0 text-sm" })
                                                </div>
                                            </div>
                                        </th>
                                        <td>
                                            @doc.CustomerINN
                                        </td>
                                        <td>
                                            @doc.Status
                                        </td>
                                        <td>
                                            @doc.SumAmount
                                        </td>
                                        <td class="text-right">
                                            <div class="dropdown">
                                                <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                    @Html.ActionLink("Удалить", "DeleteDebt", "Debt", new { id = doc.Id }, new { @class = "dropdown-item" })
                                                    @Html.ActionLink("Закрыть", "CloseDebt", "Debt", new { id = doc.Id }, new { @class = "dropdown-item" })
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
}

