@model Receivables.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

@section Header{
    <div class="container">
        <div class="title-brand">
            <h1 class="presentation-title">Register</h1>
        </div>
        <form action="Register" method="post" class="form-group register-form register-card" role="form">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.LabelFor(x => x.Email, new { @class = "presentation-subtitle" })
            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
            @Html.LabelFor(x => x.Password, new { @class = "presentation-subtitle" })
            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
            @Html.LabelFor(x => x.ConfirmPassword, new { @class = "presentation-subtitle" })
            @Html.EditorFor(x => x.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Confirm Password" } })
            <button class="btn btn-dark btn-block" type="submit">Register</button>
        </form>
    </div>
}