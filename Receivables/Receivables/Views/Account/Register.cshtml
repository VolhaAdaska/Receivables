@model Receivables.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid equal-cols-container text-white">
        <div class="row equal-row">
            <div class="col-md-3 equal-col fullscreen-element animated" data-animation="fadeInLeftBig">
            </div>
            <div class="col-md-6 equal-col animated" data-animation="fadeInRightBig">
                <div class="equal-col-wrapper">
                    <div class="equal-col-container">
                        <div class="equal-col-content">
                            <div class="row">
                                <div class="col-md-10 col-md-offset-1">
                                    <h3 class="section-title text-center nomargin text-white">Register</h3>
                                    <div class="divider divider-center text-white"><span></span></div>
                                    <div class="contact-form">
                                        <div class="col-md-12 col-sm-12">

                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group">

                                                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control nobottommargin input-border-bottom", @placeholder = "Email" } })
                                                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-white" })
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group">
                                                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control nobottommargin input-border-bottom", @placeholder = "Password" } })
                                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-white" })
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group">
                                                @Html.EditorFor(x => x.ConfirmPassword, new { htmlAttributes = new { @class = "form-control nobottommargin input-border-bottom", @placeholder = "Confirm password" } })
                                                @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-white" })
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group">
                                                @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control nobottommargin input-border-bottom", @placeholder = "Name" } })
                                                @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-white" })
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-4 text-center">
                                                <button class=" btn btn-block btn-default button button-modern nomargin " type="submit">Create account</button>
                                            </div>
                                            <div class="col-md-4">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 equal-col fullscreen-element animated" data-animation="fadeInLeftBig">

            </div>
        </div>
    </div>


}